<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="None"></style>

    <style name="Widget.U2020.GalleryImage" parent="None">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/primary_light</item>
    </style>

    <style name="MaterialEditTextStyle">
        <item name="met_errorColor">@color/error</item>
        <item name="met_floatingLabel">normal</item>
        <item name="met_textColorHint">@color/secondary_text</item>
        <item name="met_primaryColor">@color/accent</item>
        <item name="met_helperTextColor">@color/third_text</item>
        <item name="met_floatingLabelTextColor">@color/third_text</item>
        <item name="met_helperTextAlwaysShown">true</item>
        <item name="met_floatingLabelAlwaysShown">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="OzomeToolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/secondary_text</item>
    </style>

</resources>