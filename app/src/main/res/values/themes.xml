<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App" parent="Theme.App.Base" />

    <style name="Theme.NoTitleBar" parent="Theme.App.Base">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Splash" parent="Theme.App.Base">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.SplashNoAnimation" parent="Theme.App.Base">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--<item name="colorControlActivated">@color/accent</item>-->
        <!--<item name="colorControlHighlight">@color/primary</item>-->
        <!--<item name="colorControlNormal">@color/primary_light</item>-->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_accent</item>
        <!--<item name="navigationBarColor">@color/primary_dark</item>-->
        <!--<item name="android:colorForeground">@color/icons</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/content_background</item>
        <item name="drawerArrowStyle">@style/OzomeDrawerToggle</item>
    </style>

    <style name="NoAnimationTheme" parent="Theme.App.Base">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
