<?xml version="1.0" encoding="utf-8"?>
<com.umad.wat.ui.screen.gold.favorite.GoldFavoriteItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/orange_selector"
    android:orientation="vertical">

    <com.umad.wat.util.AspectRatioImageView
        android:id="@+id/gold_grid_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/gold_grid_item_progress"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gold_grid_item_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_small"
            android:layout_gravity="bottom|right"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/gold_grid_item_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/gold_grid_item_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/gold_grid_item_view_animation_like"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_gravity="center"/>

</com.umad.wat.ui.screen.gold.favorite.GoldFavoriteItemView>