<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sharing_view_vk_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:foreground="@drawable/white_selector">

        <ImageView
            android:id="@+id/sharing_view_vk_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/sharing_view_vk_item_image_send"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>


    <TextView
        android:id="@+id/sharing_view_vk_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

</LinearLayout>