<?xml version="1.0" encoding="utf-8"?>
<com.ozm.rocks.ui.gold.GoldView
    android:id="@+id/gold_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/toolbar"/>

            <com.ozm.rocks.util.view.SlidingTabLayout
                android:id="@+id/gold_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:layout_gravity="bottom"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="enterAlways"
                android:elevation="0dp"/>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/gold_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />

        <TextView
            android:id="@+id/gold_first_on_boarding"
            android:visibility="gone"
            android:layout_marginTop="28dp"
            android:padding="22dp"
            android:background="@drawable/tooltip"
            android:textSize="18sp"
            android:textColor="@color/gold_first_on_boarding_text"
            android:text="@string/gold_first_load_on_boarding_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.CoordinatorLayout>

</com.ozm.rocks.ui.gold.GoldView>