<?xml version="1.0" encoding="utf-8"?>
<com.ozm.rocks.ui.screen.main.emotions.EmotionsRatingView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/emotions_grid_item_height"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/emotions_grid_item_height"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_emotions_rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/content_background_light"
            android:layout_gravity="center_horizontal"
            android:textSize="28sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_emotions_rating_green_btn"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="14dp"
                android:layout_weight="1"
                android:background="@drawable/green_bt_bg"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/main_emotions_rating_orange_btn"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="28dp"
                android:layout_weight="1"
                android:background="@drawable/orange_bt_bg"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</com.ozm.rocks.ui.screen.main.emotions.EmotionsRatingView>