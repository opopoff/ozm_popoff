<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sharing_dialog_list_element_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/sharing_dialog_list_element_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp" />

    <TextView
        android:id="@+id/sharing_dialog_list_element_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sharing_dialog_list_element_text"
        android:layout_gravity="center_vertical" />
</LinearLayout>