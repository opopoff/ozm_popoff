<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Used for sharing logs. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Used for instrumentation tests. -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application>
        <activity
            android:name="com.ozm.rocks.ui.DebugActivity"
            android:label="Groupon Merchant Dev Settings"
            android:launchMode="singleTask"
            android:theme="@style/Theme.U2020.Debug"
            android:screenOrientation="portrait"
            android:icon="@drawable/dev_app_icon">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ozm.rocks.ui.debug.ProcessPhoenix"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:process=":phoenix" />
    </application>
</manifest>
